<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context="com.example.amam.dairy.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Dairy App"
            android:id="@+id/textvw1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:textSize="25sp"
            />

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textvw1"
            android:id="@+id/textvw2"

            android:background="@drawable/cow" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/layout1"
            android:layout_marginTop="20dp"
            android:layout_below="@id/textvw2"
            android:layout_centerHorizontal="true"
            >

            <EditText
                android:id="@+id/logemail"

                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="Email"

                android:inputType="textEmailAddress"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/layout2"
            android:layout_below="@id/layout1"
            android:layout_centerHorizontal="true"
            >

            <EditText
                android:id="@+id/logpass"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"/>
        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logbut"
            android:layout_below="@id/layout2"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:text="Login"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logbut"
            android:id="@+id/policamistake"
            android:layout_centerHorizontal="true"
            android:text="Don't have an account?, Register here"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
    </RelativeLayout>


</ScrollView>
